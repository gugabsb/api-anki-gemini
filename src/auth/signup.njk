<style>
  /* Container Principal */
  .auth-container {
    max-width: 480px;
    margin: 2rem auto;
    padding: 2.5rem;
    background: #2d2d2d;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.25);
    border: 1px solid #4F4F4F;
  }

  /* Título */
  .auth-container h2 {
    color: #01BBFE;
    text-align: center;
    margin-bottom: 1.5rem;
    font-size: 1.8rem;
    font-weight: 600;
  }

  /* Grupos de Campos */
  .form-group {
    margin-bottom: 1.5rem;
  }

  /* Labels */
  .form-group label {
    display: block;
    margin-bottom: 0.5rem;
    color: #e0e0e0;
    font-size: 0.95rem;
    font-weight: 500;
  }

  /* Campos de Input */
  .form-group input {
    width:100%;
    padding: 0.75rem 0 0.75rem 0;
    background: #363636;
    border: 1px solid #4F4F4F;
    border-radius: 8px;
    color: #ffffff;
    font-size: 1rem;
    transition: all 0.3s ease;
    text-align: center;
  }

  .form-group input:focus {
    outline: none;
    border-color: #01BBFE;
    box-shadow: 0 0 0 2px rgba(1, 187, 254, 0.2);
  }

  /* Botão de Submit */
  .btn-login {
    width: 100%;
    padding: 1rem;
    background: #01BBFE;
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.3s ease;
    margin-top: 0.5rem;
  }

  .btn-login:hover {
    background: #0095d9;
  }

  /* Link de Login */
  .auth-link {
    text-align: center;
    margin-top: 1.5rem;
    color: #b0b0b0;
    font-size: 0.9rem;
  }

  .auth-link a {
    color: #01BBFE;
    text-decoration: none;
    font-weight: 500;
  }

  .auth-link a:hover {
    text-decoration: underline;
  }

  /* Validação */
  input:invalid {
    border-color: #ff3b30;
  }

  input:valid {
    border-color: #4CAF50;
  }

  .msg{
    color: orange;
    text-align: center;
    padding: 1rem;
  }
  /* Responsivo */
  @media (max-width: 600px) {
    .auth-container {
      padding: 1.5rem;
      margin: 1rem;
    }
    
    .auth-container h2 {
      font-size: 1.5rem;
    }
  }
</style>

<div class="auth-container">
  <h2>Criar Conta</h2>
  <form id="signupForm">
    <div class="form-group">
      <label for="name">Nome:</label>
      <input type="text" id="name" required>
    </div>
    <div class="form-group">
      <label for="email">Email:</label>
      <input type="email" id="email" required>
    </div>
    <div class="form-group">
      <label for="password">Senha (mínimo 6 caracteres):</label>
      <input type="password" id="password" minlength="6" required>
    </div>
    <button type="submit" class="btn-login">Cadastrar</button>
    <p class="auth-link">
      Já tem conta? <a href="/auth/login">Faça login</a>
    </p>
    <p id="msg" class="msg"></p>
  </form>
</div>

<script>
  document.getElementById('signupForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const email = document.getElementById('email').value;
    const password = document.getElementById('password').value;
    const name = document.getElementById('name').value;
    const supabase = window.supabaseClient.init();

    try {
      // 1. Cria o usuário
      const { data, error } = await supabase.auth.signUp({
        email,
        password,
        options: {
          data: {
            full_name: name
          }
        }
      });

      if (error) throw error;
      
      alert('Verifique seu email para confirmar o cadastro!');
      window.location.href = '/dashboard';
    } catch (error) {
      if(error.message == 'User already registered'){
        document.getElementById("msg").innerHTML = "O e-mail já está cadastrado!";
      }else{
        document.getElementById("msg").innerHTML = error.message;
      }

      console.error('Erro no cadastro:', error);
      //alert(error.message);
    }
  });
</script>
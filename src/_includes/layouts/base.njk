  <style>
    :root {
      --azul-primario: #01BBFE;
      --cinza-escuro: #363636;
      --cinza-medio: #4F4F4F;
      --texto-branco: #ffffff;
      --texto-cinza: #cccccc;
    }
    body {
      font-family: 'Montserrat', sans-serif;
      background-color: var(--cinza-escuro);
      color: white;
      margin: 0;
      padding: 0;
    }
    header{
      background: linear-gradient(to right, var(--cinza-escuro), var(--cinza-medio));
    }
    footer{
      background: var(--cinza-medio); 
      padding: 20px; 
      text-align: center;
    }
    .container.header{
      background-image: url('/src/assets/images/logo-eca-50px-ppt.png');
      background-repeat: no-repeat;
      background-position: left 0px top 10px;
      border: 0px solid red;
      height: 70px;
      margin: 0 auto;
      padding: 0;
      max-width: 800px;
      display: flex;
      flex-wrap: nowrap;
    }
    .container.header .col1{
      width: 60%; 
    }
    .container.header .col2{
      width: 40%;
      text-align: right;
      padding-top: 25px;
    }
    .container.header h1{
      margin: 20px 0 0 55px;
      font-size: 1.2rem;
      color: var(--azul-primario);
    }
    .container.header h2{
      margin: 0px 0 0 55px;
      font-size: 0.75rem;
      font-weight:;
      color: var(--texto-branco);
    }

    .container.header button{
      background-color: var(--cinza-claro);
      color: var(--texto-branco);
      border-radius: 4px;
      padding: 8px;
      border: 0px solid silver;
      font-weight: normal;
    }

    .container.header button:hover{
      background-color: var(--cinza-escuro);
      color: var(--texto-branco);
    }

    .container {
      border: 0px solid red;
      max-width: 800px;
      margin: 0 auto;
      padding: 20px 0;
    }
    .dashboard {
      max-width: 1200px;
      margin: 2rem auto;
      padding: 0 1rem;
    }

    .grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 1rem;
    }

  .dashboard-container {
    max-width: 1200px;
    margin: 2rem auto;
    padding: 1rem;
  }
  
  .avatar {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    margin-left: 1rem;
  }
  
  .btn-logout {
    background: #FF3B30;
    color: white;
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 4px;
    cursor: pointer;
  }

  .btn-login{
    float: right;
  }

  /* Loader para botão */
  .loader {
    display: inline-block;
    width: 16px;
    height: 16px;
    border: 2px solid rgba(255,255,255,0.3);
    border-radius: 50%;
    border-top-color: white;
    animation: spin 1s ease-in-out infinite;
    vertical-align: middle;
    margin-right: 8px;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  /* Responsividade */
  @media (max-width: 768px) {
    .deck-card {
      padding: 1rem;
    }
    
    .purchase-button {
      padding: 0.5rem 1rem;
    }
  }


  /* LOGIN */
  
  #google-signin-container {
    margin: 2rem 0;
    display: flex;
    justify-content: center;
  }


  .auth-link {
    text-align: center;
    margin-top: 1.5rem;
    color: #b0b0b0;
    font-size: 0.9rem;
  }

  .auth-link a {
    color: #01BBFE;
    text-decoration: none;
    font-weight: 500;
  }

  .auth-link a:hover {
    text-decoration: underline;
  }
  .auth-link a:hover {
    text-decoration: underline;
  }  
  .auth-divider {
    display: flex;
    align-items: center;
    margin: 1.5rem 0;
    color: #aaa;
  }
  
  /* Container Principal */
  .auth-container {
    max-width: 480px;
    margin: 2rem auto;
    background: #2d2d2d;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.25);
    border: 1px solid #4F4F4F;
  }

  form {
    margin: 40px;
    border: 0px solid #000;
  }

  /* Título */
  .auth-container h2 {
    color: #01BBFE;
    text-align: center;
    margin-bottom: 1.5rem;
    font-size: 1.2rem;
    font-weight: 600;
  }

  /* Grupos de Campos */
  .form-group {
    margin-bottom: 1.5rem;
  }

  /* Labels */
  .form-group label {
    display: block;
    margin-bottom: 0.5rem;
    color: #e0e0e0;
    font-size: 0.95rem;
    font-weight: 500;
  }

  /* Campos de Input */
  .form-group input {
    width:100%;
    padding: 0.5rem 0 0.5rem 0;
    background: #363636;
    border: 1px solid #4F4F4F;
    border-radius: 8px;
    color: #ffffff;
    font-size: 1rem;
    transition: all 0.3s ease;
    text-align: center;
  }

  .form-group input:focus {
    outline: none;
    border-color: #01BBFE;
    box-shadow: 0 0 0 2px rgba(1, 187, 254, 0.2);
  }

  /* Botão de Submit */
  .btn-submit {
    width: 100%;
    background: var(--azul-primario);
    color: var(--texto-branco);
    padding: 0.5rem 1rem;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    margin-top: 1rem;
  }

  .btn-submit:hover {
    background:var(--texto-branco);
    color: var(--cinza-escuro);
  }

  /* Validação */
  input:invalid {
    border-color: #ff3b30;
  }

  input:valid {
    border-color: #4CAF50;
  }

  .msg{
    color: orange;
    text-align: center;
    padding: 1rem;
  }
  /* Responsivo */
  @media (max-width: 600px) {
    .auth-container {
      padding: 1.5rem;
      margin: 1rem;
    }
    
    .auth-container h2 {
      font-size: 1rem;
    }
  }




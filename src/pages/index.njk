---
layout: "layouts/base.njk"
title: "Flashcards para sua aprovação em concurso público!"
---

{% block content %}
  <style>
    .decks-container {
      margin: 2rem 0;
    }
    
    .decks-title {
      color: white;
      font-size: 1.5rem;
      margin: 0;
      padding-top:1rem;
    }
    
    .decks-carousel {
      display: flex;
      overflow-x: auto;
      padding: 1rem;
      scroll-behavior: smooth;
      gap: 1rem;
      -ms-overflow-style: none;
      scrollbar-width: none;
    }
    
    .decks-carousel::-webkit-scrollbar {
      display: none;
    }
    
    .decks-cards {
      flex: 0 0 auto;
      width: 200px;
      transition: transform 0.2s;
      position: relative;
      border-radius: 4px;
      overflow: hidden;
      box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    }
    
    .decks-cards:hover {
      transform: scale(1.05);
      z-index: 1;
    }
  
    .decks-cards img {
      width: 100%;
      height: 95px;
      object-fit: cover;
      display: block;
    }
    
    .deck-content {
      padding: 1rem;
      background: #141414;
      background: linear-gradient(to top, var(--cinza-medio), var(--cinza-escuro));
      color: white;
    }
    
    .deck-title {
      font-size: 1rem;
      margin: 0rem 0;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }
    
    .deck-desc {
      font-size: 0.8rem;
      color: #d2d2d2;
      display: -webkit-box;
      -webkit-line-clamp: 3;
      -webkit-box-orient: vertical;
      overflow: hidden;
      height: 60px;
      text-align: center;
    }
    
    .deck-price {
      color: #46d369;
      font-weight: bold;
      margin: 0.5rem 0;
      text-align:center;
      font-size: 1.25rem;
    }
    
    .buy-button {
      width: 100%;
      padding: 0.5rem;
      background: var(--azul-primario);
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-weight: bold;
      transition: background 0.2s;
      margin: 0;
    }
    
    .buy-button:hover {
      background: var(--texto-branco);
    }
    
    .carousel-controls {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0 1rem;
      margin-bottom: 1rem;
    }
    
    .carousel-nav {
      display: flex;
      gap: 0.5rem;
    }
    
    .carousel-nav button {
      background: rgba(255,255,255,0.3);
      border: none;
      color: white;
      width: 30px;
      height: 30px;
      border-radius: 50%;
      cursor: pointer;
    }
    
    .carousel-nav button:hover {
      background: rgba(255,255,255,0.5);
    }
    
    .search-filter {
      flex-grow: 1;
      max-width: 260px;
      margin-right: 1rem;
    }
    
    .search-filter input {
      width: 100%;
      padding: 0.5rem 1rem;
      border-radius: 10px;
      border: none;
      background: rgba(255,255,255,0.2);
      color: white;
      outline: none;
    }
    
    .search-filter input::placeholder {
      color: rgba(255,255,255,0.7);
    }
    
    .no-results {
      color: white;
      text-align: center;
      padding: 2rem;
      width: 100%;
    }
  </style>

  <h2 class="decks-title">ESCOLHA SEU DECK</h2>
  <div class="decks-container">
    <div class="carousel-controls">
      <div class="search-filter">
        <input type="text" id="deckSearch" placeholder="Buscar decks..." oninput="filterDecks()">
      </div>
      <div class="carousel-nav">
        <button class="prev-btn" onclick="scrollCarousel(-1)">❮</button>
        <button class="next-btn" onclick="scrollCarousel(1)">❯</button>
      </div>
    </div>
    <div class="decks-carousel" id="decksCarousel">
      {% for deck in decks.items %}
        <div class="decks-cards" data-title="{{ deck.fields.title | lower }}" data-desc="{{ deck.fields.description | lower }}">
          {% if deck.fields.image %}
            <img src="{{ deck.fields.image.fields.file.url }}" 
                 alt="{{ deck.fields.title }}"
                 class="image">
          {% endif %}
          <div class="deck-content">
            <h3 class="deck-title">{{ deck.fields.title }}</h3>      
            <p class="deck-desc">{{ deck.fields.description }}</p>
            <p class="deck-price">
              R$ {{ deck.fields.price | default("49,90") }},00
            </p>
            <button onclick="location.href='/comprar/{{ deck.sys.id }}/'" 
              class="buy-button">
              COMPRAR AGORA
            </button>
          </div>
        </div>
      {% else %}
        <div class="decks-cards" style="text-align: center; width: 100%;">
          <p>Nenhum deck disponível no momento. Volte em breve!</p>
        </div>
      {% endfor %}
    </div>
    
    <div id="noResults" class="no-results" style="display: none;">
      Nenhum deck encontrado com o termo pesquisado.
    </div>
  </div>

  <script>
    // Store original deck cards for filtering
    const originalDecks = Array.from(document.querySelectorAll('.decks-cards'));
    const carousel = document.getElementById('decksCarousel');
    const noResultsMessage = document.getElementById('noResults');
    
    function filterDecks() {
      const searchTerm = document.getElementById('deckSearch').value.toLowerCase();
      let hasResults = false;
      
      // Reset carousel first
      carousel.innerHTML = '';
      noResultsMessage.style.display = 'none';
      
      originalDecks.forEach(deck => {
        const title = deck.dataset.title;
        const desc = deck.dataset.desc;
        
        if (title.includes(searchTerm) || desc.includes(searchTerm)) {
          carousel.appendChild(deck.cloneNode(true));
          hasResults = true;
        }
      });
      
      if (!hasResults && searchTerm.length > 0) {
        noResultsMessage.style.display = 'block';
      } else if (originalDecks.length === 0) {
        // Show original "no decks available" message
        carousel.innerHTML = '<div class="decks-cards" style="text-align: center; width: 100%;"><p>Nenhum deck disponível no momento. Volte em breve!</p></div>';
      }
    }
    
    function scrollCarousel(direction) {
      const scrollAmount = 300;
      
      if (direction === 1) {
        carousel.scrollBy({ left: scrollAmount, behavior: 'smooth' });
      } else {
        carousel.scrollBy({ left: -scrollAmount, behavior: 'smooth' });
      }
    }
    
    // Optional: Add hover effects for the carousel
    let isDown = false;
    let startX;
    let scrollLeft;

    carousel.addEventListener('mousedown', (e) => {
      isDown = true;
      startX = e.pageX - carousel.offsetLeft;
      scrollLeft = carousel.scrollLeft;
    });

    carousel.addEventListener('mouseleave', () => {
      isDown = false;
    });

    carousel.addEventListener('mouseup', () => {
      isDown = false;
    });

    carousel.addEventListener('mousemove', (e) => {
      if(!isDown) return;
      e.preventDefault();
      const x = e.pageX - carousel.offsetLeft;
      const walk = (x - startX) * 2;
      carousel.scrollLeft = scrollLeft - walk;
    });
  </script>
{% endblock %}